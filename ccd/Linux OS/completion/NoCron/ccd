# /etc/bash_completion.d/ccd
# This version of _ccd works standalone, although it's much slower to load.

mapfile -t _all_dir_names < <( find ~ \( ! -regex '.*/\..*' \) -type d -printf "%f\n" 2>/dev/null)
_ccd(){
    local dir cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=()
    for dir in "${_all_dir_names[@]}"; do
        if [[ $dir == "$cur"* ]]; then
            printf -v dir "%q" "$dir"       
            COMPREPLY+=("$dir")
        fi
    done
}
complete -F _ccd ccd

